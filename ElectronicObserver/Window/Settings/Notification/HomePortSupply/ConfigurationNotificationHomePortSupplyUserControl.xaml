<UserControl
	x:Class="ElectronicObserver.Window.Settings.Notification.HomePortSupply.ConfigurationNotificationHomePortSupplyUserControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:base="clr-namespace:ElectronicObserver.Window.Settings.Notification.Base"
	xmlns:controls="http://schemas.modernwpf.com/2019"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ElectronicObserver.Window.Settings.Notification.HomePortSupply"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DataContext="{d:DesignInstance local:ConfigurationNotificationHomePortSupplyViewModel}"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d"
	>
	<UserControl.Resources>
		<DataTemplate DataType="{x:Type local:HomePortSupplyNotificationLevel}">
			<TextBlock Text="{Binding Converter={StaticResource EnumDisplayConverter}}" />
		</DataTemplate>

		<Style TargetType="controls:NumberBox">
			<Setter Property="VerticalAlignment" Value="Center" />
		</Style>
	</UserControl.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<base:ConfigurationNotificationBaseUserControl Grid.Row="0" />

		<GroupBox
			Grid.Row="1"
			Margin="4"
			Header="{Binding Translation.GroupHomePortSupply}"
			>
			<WrapPanel Orientation="Horizontal">
				<StackPanel Margin="10" Orientation="Horizontal">
					<TextBlock Text="{Binding Translation.TriggerWhen}" />
					<ComboBox
						ItemsSource="{Binding NotificationLevels}"
						SelectedItem="{Binding NotificationLevel}"
						ToolTip="{Binding Translation.HomePortSupplyNotificationLevelToolTip}"
						/>
				</StackPanel>

				<CheckBox
					Margin="10"
					Content="{Binding Translation.HomePortSupply_NotifyForExpeditions}"
					IsChecked="{Binding NotifyForExpeditions}"
					ToolTip="{Binding Translation.HomePortSupply_NotifyForExpeditionsToolTip}"
					/>

				<StackPanel Margin="10" Orientation="Horizontal">
					<TextBlock Text="{Binding Translation.HomePortSupply_ExpeditionHurryBy}" />
					<controls:NumberBox SpinButtonPlacementMode="Inline" Value="{Binding ExpeditionAccelInterval}" />
					<TextBlock Text="{Binding Translation.Sec}" />
				</StackPanel>
			</WrapPanel>
		</GroupBox>
	</Grid>
</UserControl>
